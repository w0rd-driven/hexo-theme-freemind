<nav id="main-nav" class="navbar <% if (theme.inverse){ %>navbar-inverse<% } %> navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <button type="button" class="navbar-header navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
	<span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="collapse navbar-collapse nav-menu">
		<ul class="nav navbar-nav">
		  <% theme.menu.forEach(function(menu){ %>
			<li>
				<% if (typeof menu.submenu !== 'undefined' && menu.submenu && menu.submenu.length) { %>
				<div class="dropdown">
					<a href="<%- config.root %><%- menu.url %>" title="<%- menu.intro %>">
						<%- menu.title %>
						<span class="caret"></span>
					</a>
					<ul class="dropdown-menu">
						<% menu.submenu.forEach(function(submenu){ %>
						<li>
							<a href="<%- config.root %><%- submenu.url %>" title="<%- submenu.intro %>">
								<%- submenu.title %>
							</a>
						</li>
						<% }) %>
					</ul>
				</div>
				<% } else { %>
				<a href="<%- config.root %><%- menu.url %>" title="<%- menu.intro %>">
					<%- menu.title %>
				</a>
				<% } %>
			</li>
		  <% }) %>
		</ul>
		<ul class="nav navbar-nav pull-right">
		  <% theme.links.forEach(function(link){ %>
		  <li>
			<a href="<%- link.url %>" title="<%- link.intro %>">
			  <i class="<%- link.icon %>"></i>
			</a>
		  </li>
		  <% }) %>
		</ul>
      </div>
    </div> <!-- container -->
</nav>
<div class="clearfix"></div>
